{ 
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strict": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./public/"
  },
  "include": [
    "public"
  ],
  "exclude": [ "node_modules" ] 
}